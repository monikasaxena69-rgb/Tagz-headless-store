{
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate, max-age=0"
        }
      ]
    }
  ],
  "build": {
    "env": {
      "SHOPIFY_STORE_DOMAIN": "@shopify_store_domain",
      "SHOPIFY_STOREFRONT_ACCESS_TOKEN": "@shopify_storefront_access_token"
    }
  },
  "functions": {
    "pages/api/**/*.js": {
      "maxDuration": 30
    }
  }
}